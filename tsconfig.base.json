{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@my-org/*": ["libs/*"]
    },
    "lib": ["dom", "es2020"]
  },
  "exclude": ["node_modules", "tmp"]
}
